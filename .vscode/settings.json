{
    "isort.check": true,
    "isort.args": [
        "\"--settings-path\", \"${workspaceFolder}/pyproject.toml\""
    ],
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },
    "files.exclude": {
        "**/.mypy_cache": true,
        "**/__pycache__": true,
    }
}
